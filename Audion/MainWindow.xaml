<Window x:Class="Audion.MainWindow"
        
        Background="#131621"
        ResizeMode="NoResize"
        BorderBrush="Transparent"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audion.ViewModel"
        mc:Ignorable="d"
        Title="Audion" Height="700" Width="1200">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Column="0"
                CornerRadius="10"
                Background="#0C0F15"
                ClipToBounds="True"
                Padding="5">
            <ListBox ItemsSource="{Binding Playlists}"
             SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay}"
             Foreground="White"
             BorderBrush="Transparent"
             FontSize="20"
             DisplayMemberPath="Name"
             Margin="0, 0, 10, 0"
             Background="Transparent"
             FontFamily="Arial Rounded MT Bold"/>
        </Border>

        <Border Grid.Column="2"
                CornerRadius="10"
                Background="#0C0F15"
                ClipToBounds="True"
                Padding="5">
            <ListBox ItemsSource="{Binding SelectedPlaylist.Tracks}"
             SelectedItem="{Binding SelectedPlaylist.SelectedTrack, Mode=TwoWay}"
             Foreground="White"
             BorderBrush="Transparent"
             FontSize="15"
             DisplayMemberPath="Title"
             Background="Transparent"
             FontFamily="Segoe UI"/>
        </Border>

        <StackPanel Grid.Column="0" 
                    Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0, 10, 10, 0">
                <Button FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE109;" 
                        Click="AddPlaylistButton_Click"
                        Padding="10, 5" 
                        Margin="0, 0, 5, 0"
                        Background="#0C0F15"
                        Foreground="White"
                        BorderBrush="Transparent"/>
                <Button FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE74D;" 
                        Click="DeletePlaylistButton_Click"
                        Padding="10, 5" 
                        Margin="0, 0, 5, 0"
                        Background="#0C0F15"
                        Foreground="White"
                        BorderBrush="Transparent"/>
                <Button FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE72C;" 
                        Click="RefreshButton_Click"
                        Padding="10, 5" 
                        Margin="0, 0, 5, 0"
                        Background="#0C0F15"
                        Foreground="White"
                        BorderBrush="Transparent"/>
        </StackPanel>

        <StackPanel Grid.Column="2" 
                    Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center" 
                    Margin="0, 10, 10, 0">
            <Button FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE892;" 
                        Click="BTraverse"
                        Padding="10, 5" 
                        Margin="0, 0, 5, 0"
                        Background="#0C0F15"
                        Foreground="White"
                        BorderBrush="Transparent"/>
            <Button FontFamily="Segoe MDL2 Assets" 
                        Content="{Binding PlayPauseIcon}" 
                        Click="PlayPauseButton_Click"
                        Padding="10, 5" 
                        Margin="0, 0, 5, 0"
                        Background="#0C0F15"
                        Foreground="White"
                        BorderBrush="Transparent"/>
            <Button FontFamily="Segoe MDL2 Assets" 
                        Content="&#xE893;" 
                        Click="FTraverse"
                        Padding="10, 5" 
                        Margin="0, 0, 5, 0"
                        Background="#0C0F15"
                        Foreground="White"
                        BorderBrush="Transparent"/>
        </StackPanel>

    </Grid>

</Window>
