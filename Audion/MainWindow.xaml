<Window x:Class="Audion.MainWindow"
        
        Background="#131621"
        
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Audion.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="600">

    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="8*" />
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0"
                CornerRadius="10"
                Background="#0C0F15"
                ClipToBounds="True"
                Padding="5">
            <ListBox ItemsSource="{Binding Playlists}"
             SelectedItem="{Binding SelectedPlaylist, Mode=TwoWay}"
             DisplayMemberPath="Name"
             Margin="0, 0, 10, 0"
             Background="Transparent"/>
        </Border>

        <Border Grid.Column="1"
                CornerRadius="10"
                Background="#0C0F15"
                ClipToBounds="True"
                Padding="5">
            <ListBox ItemsSource="{Binding SelectedPlaylist.Tracks}"
             DisplayMemberPath="Title"
             Background="Transparent"/>
        </Border>
        
    </Grid>

</Window>
